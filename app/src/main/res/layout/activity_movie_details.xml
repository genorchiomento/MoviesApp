<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.activity.MovieDetailsActivity">

  <include
    android:id="@+id/toolbar"
    layout="@layout/toolbar" />

  <androidx.core.widget.NestedScrollView
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/toolbar"
    app:layout_constraintVertical_bias="0.0">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintDetails"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="@dimen/components_stack_32">

      <ImageView
        android:id="@+id/imageViewMovieBackdrop"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

      <ImageView
        android:id="@+id/imageViewMoviePoster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/components_stack_16"
        android:background="@android:color/white"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_image_placeholder"
        app:layout_constraintBottom_toTopOf="@+id/textViewMovieTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewMovieBackdrop" />

      <TextView
        android:id="@+id/textViewMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/components_inline_16"
        android:layout_marginTop="@dimen/components_stack_16"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textSize="@dimen/components_font_22"
        app:layout_constraintEnd_toEndOf="@+id/imageViewMoviePoster"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMovieBackdrop"
        tools:text="Movie Title" />

      <TextView
        android:id="@+id/textViewMovieRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/components_inline_24"
        android:layout_marginTop="@dimen/components_stack_8"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/components_font_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMovieTitle"
        tools:text="Movie Release" />

      <View
        android:id="@+id/viewDividerFirst"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/components_stack_16"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMovieRelease" />

      <TextView
        android:id="@+id/textViewMovieOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/components_inline_16"
        android:layout_marginTop="@dimen/components_stack_16"
        android:layout_marginEnd="@dimen/components_inline_16"
        android:fontFamily="sans-serif-light"
        android:textSize="@dimen/components_font_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDividerFirst"
        tools:text="Movie Overview" />

      <View
        android:id="@+id/viewDividerSecond"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/components_stack_16"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMovieOverview" />

      <TextView
        android:id="@+id/textViewMovieGenres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/components_inline_16"
        android:layout_marginTop="@dimen/components_stack_16"
        android:layout_marginEnd="@dimen/components_inline_16"
        android:layout_marginBottom="@dimen/components_stack_16"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textSize="@dimen/components_font_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDividerSecond"
        tools:text="Movie Genres" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
