<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="150dp"
  android:layout_marginStart="@dimen/components_inline_16"
  android:layout_marginTop="@dimen/components_stack_4"
  android:layout_marginEnd="@dimen/components_inline_16"
  android:layout_marginBottom="@dimen/components_stack_4"
  android:clickable="true"
  android:focusable="true"
  android:foreground="?attr/selectableItemBackground"
  app:cardCornerRadius="@dimen/components_card_view_corner_radius">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/posterImageView"
      android:layout_width="100dp"
      android:layout_height="match_parent"
      android:adjustViewBounds="true"
      android:importantForAccessibility="no"
      android:scaleType="fitCenter"
      android:src="@drawable/ic_image_placeholder" />

    <TextView
      android:id="@+id/titleTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/components_inline_8"
      android:layout_marginTop="@dimen/components_stack_16"
      android:layout_toEndOf="@id/posterImageView"
      android:ellipsize="end"
      android:maxLines="2"
      android:textSize="@dimen/components_font_18"
      android:textStyle="bold"
      tools:text="Titanic" />

    <TextView
      android:id="@+id/genresTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/titleTextView"
      android:layout_marginStart="@dimen/components_inline_8"
      android:layout_toEndOf="@id/posterImageView"
      android:ellipsize="end"
      android:maxLines="2"
      android:textSize="@dimen/components_font_14"
      tools:text="Drama, Romance, Thriller" />

    <TextView
      android:id="@+id/releaseDateTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="@dimen/components_inline_8"
      android:layout_marginBottom="@dimen/components_stack_8"
      android:layout_toEndOf="@id/posterImageView"
      android:textSize="@dimen/components_font_14"
      android:textStyle="italic"
      tools:text="19/12/1997" />

  </RelativeLayout>

</androidx.cardview.widget.CardView>
